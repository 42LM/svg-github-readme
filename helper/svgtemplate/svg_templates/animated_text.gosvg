<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" width="1280" height="{{.Height}}">
 <title>animated_text</title>
 <path id="path" x="0" y="0">
   <animate attributeName="d" from="m0,{{.AnimationHeight}} h0" to="m0,{{.AnimationHeight}} h1100" dur="6.8s" begin="0s" repeatCount="indefinite"/>
 </path>
  <text x="0" y="0" font-size="{{.FontSize}}" font-family="{{.FontFamily}}" fill="#{{.Color}}">
    <textPath xlink:href="#path">{{.Text}}</textPath>
  </text>
</svg>
